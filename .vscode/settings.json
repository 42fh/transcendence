{
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnType": true,
  "editor.rulers": [120],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.wordBasedSuggestions": "off",
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "black-formatter.importStrategy": "useBundled",
  "black-formatter.path": [],
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportGeneralTypeIssues": "none",
    "reportMissingImports": "none",
    "reportMissingTypeStubs": "none",
    "reportMissingModuleSource": "none"
  },
  "python.globalModuleInstallation": true,
  "python.analysis.autoFormatStrings": false,
  "python.analysis.autoImportCompletions": false,
  "python.analysis.autoIndent": true,
  "python.analysis.autoSearchPaths": true,
  "black-formatter.args": ["--line-length", "120"],
  "python.languageServer": "Pylance",
  "makefile.configureOnOpen": false,
  "workbench.colorCustomizations": {
    "activityBar.background": "#073609",
    "titleBar.activeBackground": "#0A4B0D",
    "titleBar.activeForeground": "#F0FDF0"
  },
  "pylint.args": ["--disable=C0111,no-member"]
}
